<config xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
  <device>
    <name>{$DEVICE-NAME}</name>
      <config>
        <?set-context-node {/network[name=$SERVICE-NAME]/topology[name=$TOPOLOGY-NAME]/node[name=$NODE-NAME]/function-objects/tacacs[function-object-name=$FO-NAME]}?>

        <tacacs-server xmlns="http://tail-f.com/ned/cisco-ios-xr">
<?foreach {server}?>
  <?if {port}?>
          <host>
            <name>{ip-address}</name>
            <port>{port}</port>
            <key>
              <encryption>7</encryption>
              <key>{current()/../key}</key>
            </key>
          </host>
  <?else?>
          <host>
            <name>{ip-address}</name>
            <port>{current()/../port}</port>
            <key>
              <encryption>7</encryption>
              <key>{current()/../key}</key>
            </key>
          </host>
  <?end?>
<?end?>
        </tacacs-server>
        <tacacs xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <source-interface>
            <MgmtEth>0/RSP0/CPU0/0</MgmtEth>
            <vrf>Mgmt-intf</vrf>
          </source-interface>
        </tacacs>

      </config>
    </device>
  </devices>
</config>
